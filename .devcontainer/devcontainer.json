{
    "name": "YouTube Browser",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    
    "forwardPorts": [6080],
    "portsAttributes": {
        "6080": {
            "label": "Desktop",
            "onAutoForward": "notify"
        }
    },
    
    "postCreateCommand": "pip install -r requirements.txt",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}