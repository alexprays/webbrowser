{
    "name": "YouTube Browser",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "version": "latest",
            "password": "codespaces",
            "webPort": "6080"
        }
    },
    "forwardPorts": [6080],
    "portsAttributes": {
        "6080": {
            "label": "Desktop",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}